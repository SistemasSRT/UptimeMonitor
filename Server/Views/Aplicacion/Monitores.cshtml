
@{
    ViewBag.Title = "Monitores";
    Layout = null;
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Monitores </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">

   

            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title" style="display: table-cell;">Nombre</th>
                            <th class="column-title" style="display: table-cell;">Última Ejecución</th>
                            <th class="column-title no-link last" style="display: table-cell;" colspan="6">
                                <span class="nobr">Acciones</span>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr class="even pointer" ng-repeat="monitor in lista">                            
                            <td class="col-xs-2">
                                {{monitor.Nombre}}
                            </td>
                            <td class="col-xs-5">
                                {{monitor.UltimaEjecucion}}
                            </td>
                            <td class="col-xs-1">
                                <a class="btn btn-xs btn-success btn-block" href="#/monitor/editar/{{monitor.Id}}">Editar</a>
                            </td>
                            <td class="col-xs-1">
                                <button ng-click="verLogs(monitor)" class="btn btn-xs btn-primary btn-block">Ver Logs</button>
                            </td>
                            <td class="col-xs-1">
                                <button ng-click="iniciarAsync(monitor.Id)" class="btn btn-xs btn-success btn-block" ng-if="monitor.Estado == 0">Iniciar</button>
                                <button ng-click="detenerAsync(monitor.Id)" class="btn btn-xs btn-warning btn-block" ng-if="monitor.Estado == 1">Detener</button>
                            </td>
                            <td class="col-xs-1">
                                <button ng-click="limpiarAsync(monitor.Id)" class="btn btn-xs btn-warning btn-block">Limpiar Logs</button>
                            </td>
                            <td class="col-xs-1">
                                <button ng-click="eliminarAsync(monitor.Id)" class="btn btn-xs btn-danger btn-block">Eliminar</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>